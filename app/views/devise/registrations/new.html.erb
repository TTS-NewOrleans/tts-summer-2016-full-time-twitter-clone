<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "you@email.com", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "First And Last Name", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :username %><br>
    <%= f.text_field :username, placeholder: "@username", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :location%><br>
    <%= f.text_field :location, placeholder: "New Orleans, Louisiana", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :bio %><br>
    <%= f.text_field :bio, placeholder: "Your bio here...", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Long, secure password", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Type that thing again!", class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up", class: "btn btn-sm btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
