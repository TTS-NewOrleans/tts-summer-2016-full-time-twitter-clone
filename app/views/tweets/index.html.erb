<p id="notice"><%= notice %></p>

<h1>All The Tweets In The Universe!</h1>

<%= link_to 'New Tweet', new_tweet_path, class: "btn btn-success btn-md" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td><%= tweet.user.username %></td>
        <td><%= link_to 'Show',
                        tweet,
                        class: "btn btn-xs btn-default" %></td>
        <td><%= link_to 'Edit',
                        edit_tweet_path(tweet),
                        class: "btn btn-xs btn-default"  %></td>
        <td><%= link_to 'Destroy',
                        tweet,
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>